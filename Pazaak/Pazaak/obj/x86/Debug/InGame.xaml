                        <Grid Grid.Column="1">
                            <TextBlock x:ConnectionId='11' x:Name="enCrd5" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="2">
                            <TextBlock x:ConnectionId='10' x:Name="enCrd6" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="2" BorderBrush="Black" BorderThickness="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
