                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBlock x:ConnectionId='14' x:Name="enCrd2" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="2">
                            <TextBlock x:ConnectionId='13' x:Name="enCrd3" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" BorderBrush="Black" BorderThickness="2">
                        <Grid.ColumnDefinitions>
