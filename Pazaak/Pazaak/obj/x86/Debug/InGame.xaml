                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" BorderBrush="Black" BorderThickness="2">
                            <TextBlock x:ConnectionId='22' x:Name="usrScr" Text="Score" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Grid>
                        <Grid Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                            <Button x:ConnectionId='21' x:Name="stndBtn" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Stand"                     />
                        </Grid>
                        <Grid Grid.Column="2" BorderBrush="Black" BorderThickness="2">
                            <Button x:ConnectionId='20' x:Name="endBtn" HorizontalAlignment="Center" VerticalAlignment="Center" Content="End Turn"                       />
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
