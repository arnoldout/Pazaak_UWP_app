    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!--Name Tags-->
        <Grid.ColumnDefinitions>
            <!--Left Side-->
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <!--Right Side-->
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Left Side -->
        <Grid Grid.Column="0" >
            <Grid.RowDefinitions>
